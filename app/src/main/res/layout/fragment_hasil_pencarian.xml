<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HasilPencarianFragment"
    android:padding="20dp">

    <ImageView
        android:id="@+id/hasilPencarianFragment_iv_reviewUlang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_flag"
        app:tint="@color/design_default_color_primary"
        android:contentDescription="@string/request_review_kembali" />

    <TextView
        android:id="@+id/hasilPencarianFragment_tv_captionNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/nomor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/hasilPencarianFragment_tv_nomor"
        app:layout_constraintEnd_toEndOf="@id/hasilPencarianFragment_tv_nomor"
        app:layout_constraintBottom_toTopOf="@id/hasilPencarianFragment_tv_nomor"/>

    <TextView
        android:id="@+id/hasilPencarianFragment_tv_nomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomor_tidak_ditemukan"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="60dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/hasilPencarianFragment_rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hasilPencarianFragment_tv_nomor"
        app:layout_constraintBottom_toTopOf="@id/hasilPencarianFragment_tv_riwayatLaporan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">
        <Button
            android:id="@+id/hasilPencarianFragment_btn_lapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_lapor"
            android:textAllCaps="false"
            android:text="@string/lapor"
            android:drawableTint="@color/white"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/hasilPencarianFragment_btn_blokir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/hasilPencarianFragment_btn_lapor"
            android:drawableTop="@drawable/ic_phone_disabled"
            android:drawableTint="@color/white"
            android:text="@string/blokir"
            android:textAllCaps="false" />
    </RelativeLayout>


    <TextView
        android:id="@+id/hasilPencarianFragment_tv_riwayatLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hasilPencarianFragment_rl_buttons"
        app:layout_constraintBottom_toTopOf="@id/hasilPencarianFragment_rcv_riwayat"
        android:text="@string/riwayat_laporan"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hasilPencarianFragment_rcv_riwayat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hasilPencarianFragment_tv_riwayatLaporan"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>