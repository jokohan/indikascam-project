<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/profileFragment_iv_editProfile"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@id/profileFragment_civ_profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileFragment_civ_profileImage"
        android:layout_gravity="right"
        android:layout_margin="8dp"/>

    <!-- TODO: Update blank fragment layout -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileFragment_civ_profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_profile_100dp"
        app:civ_border_color="#757575"
        app:civ_border_width="1dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/profileFragment_tv_namaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileFragment_civ_profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ucok"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <TextView
        android:id="@+id/profileFragment_tv_emailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileFragment_tv_namaUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="ucok@gmail.com"
        android:layout_marginTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/profileFragment_tv_emailUser"
        app:layout_constraintBottom_toTopOf="@id/profileFragment_btn_laporanSaya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/profileFragment_btn_profilUsaha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profileFragment_tv_emailUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:textAllCaps="false"
        android:text="Profil Usaha"
        android:textColor="#757575"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_business_suitcase"/>

    <Button
        android:id="@+id/profileFragment_btn_laporanSaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profileFragment_tv_emailUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:textAllCaps="false"
        android:text="Laporan Saya"
        android:textColor="#757575"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_flag"/>

    <Button
        android:id="@+id/profileFragment_btn_pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profileFragment_tv_emailUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:textAllCaps="false"
        android:text="Pengaturan"
        android:textColor="#757575"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_settings"/>

    <Button
        android:id="@+id/profileFragment_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profileFragment_tv_emailUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:textAllCaps="false"
        android:text="Keluar"
        android:textColor="#757575"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_logout"/>



    <Button
        android:id="@+id/profileFragment_btn_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:text="Login"/>

</LinearLayout>