<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_banner"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:strokeWidth="1dp"
    android:layout_margin="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_comment_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_comment_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/item_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_comment_image"
            app:layout_constraintStart_toEndOf="@id/item_comment_image"
            android:layout_marginStart="8dp"
            android:text="Ucok"/>

        <TextView
            android:id="@+id/item_comment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_comment_title"
            app:layout_constraintStart_toEndOf="@id/item_comment_image"
            android:layout_margin="8dp"
            android:text="Scam"/>

        <TextView
            android:id="@+id/item_comment_tanggalLapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_comment_title"
            app:layout_constraintBottom_toBottomOf="@id/item_comment_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="10 Jan 2022"
            />

        <TextView
            android:id="@+id/item_comment_statusLapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_comment_description"
            app:layout_constraintBottom_toBottomOf="@id/item_comment_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Pending"
            android:textStyle="italic|bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>