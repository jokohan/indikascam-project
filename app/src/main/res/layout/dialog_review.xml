<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permohonan_review_ulang"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:src="@drawable/review"
        android:contentDescription="@string/permohonan_review_ulang"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="8dp">
        <TextView
            android:id="@+id/dialogReview_tv_numberType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialogReview_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/atas_laporan"
        android:gravity="center"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/dialogReview_tv_laporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/laporan_review"
        android:gravity="center"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/dialogReview_btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kirim"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"/>

</LinearLayout>